@page
@model Zuber.Pages.ProfileModel
@{
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>

    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap-switch-button@1.1.0/css/bootstrap-switch-button.min.css" rel="stylesheet">

</head>

</html>
<body style="background-image: url(/Images/bg-1.jpg); background-size: cover;">
<main class="container" style="height: 100vh;">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.editableUser.Id"/>
                <input type="hidden" asp-for="@Model.editableUser.Password"/>
                <input type="hidden" asp-for="@Model.editableUser.Email"/>
                <input type="hidden" asp-for="@Model.editableUser.DotId"/>
                <div class="col-md-10 mt-5 pt-5">
                    <div class="row z-depth-3">
                        <div class="col-sm-4 bg-dark rounded-left">
                            <img src="Images/15.jpg" class="img-fluid rounded-circle" alt="img 1">
                            <div class="card-block text-center text-white">
                                <i class="fas fa-user-tie fa-7x mt-5"></i>
                                <input type="file" name="file" id="file" class="inputfile"/>
                                <label for="file">Choose a file</label>

                                <i class="far fa-edit fa-2x mb-4"></i>
                            </div>
                        </div>
                        <div class="col-sm-8 bg-light rounded-right text-white">
                            <h3 class="mt-3 text-center">Information</h3>
                            <hr class="badge-primary mt-0 w-25">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="font-weight-bold" asp-for="@Model.editableUser.Name"></label>
                                    <input asp-for="@Model.editableUser.Name" class="form-control"/>
                                    <span asp-validation-for="@Model.editableUser.Name" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Status</p>
                                    <div class="custom-control custom-switch">

                                        <style>
                                            .switch.ios, .switch-on.ios, .switch-off.ios {
                                                border-radius: 20rem;
                                            }

                                            .switch.ios .switch-handle {
                                                border-radius: 20rem;
                                            }
                                        </style>
                                        <input type="checkbox" data-toggle="switchbutton" data-style="ios" data-onstyle="dark" data-onlabel="Driver" data-offlabel="Passenger" asp-for="@Model.editableUser.Driver">

                                        @*<input type="checkbox" class="custom-control-input" id="switch" asp-for="@Model.editableUser.Driver">
                                <label class="custom-control-label" for="switch">Passenger, Driver</label>*@
                                    </div>
                                </div>
                            </div>
                            <h4 class="mt-3">Contact</h4>
                            <hr class="bg-primary">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="font-weight-bold" asp-for="@Model.editableUser.PhoneNo"></label>
                                    <input asp-for="@Model.editableUser.PhoneNo" class="form-control"/>
                                    <span asp-validation-for="@Model.editableUser.PhoneNo" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label class="font-weight-bold" asp-for="@Model.editableUser.Email"></label>
                                    <input class="form-control" value="@Model.editableUser.Email" disabled/>
                                </div>
                            </div>
                            <hr/>

                            <div class="row">
                                <div class="col-sm-4">
                                    <button class="btn btn-danger" asp-page-handler="Delete" onclick="deleteProfile()">Delete Profile</button>
                                </div>
                                <div class="col-sm-4">
                                    <button class="btn btn-group-lg" asp-page="dotSettings">Set your dot</button>
                                </div>
                                <div class="col-sm-4">
                                    <input type="submit" value="Save" asp-page-handler="Save" class="btn btn-primary"/>
                                </div>
                            </div>
                            <br/>

                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</main>
@*<footer class="navbar navbar-default navbar-static-bottom">
    
</footer>*@

<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap-switch-button@1.1.0/dist/bootstrap-switch-button.min.js"></script>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js" integrity="sha384-lpyLfhYuitXl2zRZ5Bn2fqnhNAKOAaM/0Kr9laMspuaMiZfGmfwRNFh8HlMy49eQ" crossorigin="anonymous"></script>
</body>


<script>
    function deleteProfile() {
        if (!confirm("Are you sure? This is permanent.")) {
            event.preventDefault();
        }
    }
</script>
