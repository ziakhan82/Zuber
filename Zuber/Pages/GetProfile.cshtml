@page
@model Zuber.Pages.GetProfileModel
@{
}

<body style="background-image: url(" Images /bg-1.jpg"); margin: 0; padding: 0; background-size: cover; background-position: center; font-family: sans-serif; color: #fff;">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 mt-5 pt-5">
                <div class="row z-depth-3">
                    <div class="col-sm-4 bg-dark rounded-left">
                        <img src="Images/15.jpg" class="img-fluid rounded-circle" alt="img 1">
                        <div class="card-block text-center text-white">
                            <i class="fas fa-user-tie fa-7x mt-5"></i>
                            <h2 class="font-weight-bold mt-4">bla bla</h2>
                            <p>bla bla2</p>
                            <i class="far fa-edit fa-2x mb-4"></i>
                        </div>
                    </div>
                    <div class="col-sm-8 bg-white rounded-right">
                        <h3 class="mt-3 text-center">@Model.User.User.Name's Profile</h3>
                        <hr class="badge-primary mt-0 w-25">
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Name:</p>
                                <h6 class="text-muted">@Model.GetUser.Name</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Status</p>
                                @{
                                    if (@Model.GetUser.Driver)
                                    {
                                        <h6 class="text-muted">Driver</h6>
                                    }
                                    else if (!@Model.GetUser.Driver)
                                    {
                                        <h6 class="text-muted">Passenger</h6>
                                    }
                                }
                            </div>
                        </div>
                        <h4 class="mt-3">Contact</h4>
                        <hr class="bg-primary">
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Phone</p>
                                <h6 class="text-muted">@Model.GetUser.PhoneNo</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Email</p>
                                <h6 class="text-muted">@Model.GetUser.Email</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>